{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["ES2017", "DOM"],
        "module": "CommonJS",
        "noImplicitAny": true,
        "listEmittedFiles": true,
        "pretty": true,
        "outDir": "./dist/cjs",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist/types"
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules"
    ]
}